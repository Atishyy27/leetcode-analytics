{
  "manifest_version": 3,
  "name": "Refined LeetCode Analytics",
  "version": "1.0.0",
  "description": "Embeds rating-based analytics directly onto LeetCode profile pages.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/"
  ],
  "web_accessible_resources": [
    {
      "resources": ["https://cdn.jsdelivr.net/npm/chart.js"],
      "matches": ["https://leetcode.com/*"]
    }
  ]
}